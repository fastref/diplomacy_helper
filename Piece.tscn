	a = texture(TEXTURE, UV + vec2(0, -outline_width)*ps).a;
	maxa = max(a, maxa); 
	mina = min(a, mina);
	
	a = texture(TEXTURE, UV + vec2(0, outline_width)*ps).a;
	maxa = max(a, maxa); 
	mina = min(a, mina);
	
	a = texture(TEXTURE, UV + vec2(-outline_width,0)*ps).a;
	maxa = max(a, maxa); 
	mina = min(a, mina);
	
	a = texture(TEXTURE, UV + vec2(outline_width, 0)*ps).a;
	maxa = max(a, maxa); 
	mina = min(a, mina);
	
	COLOR = mix(col, outline_color, maxa-mina);
	}"

